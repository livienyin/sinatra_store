<div class="row span6 center">
  <table class="table table-striped">
    <tr>
      <th>Id</th>
      <th>Product Name</th>
      <th>Price</th>
      <th>Sale!</th>
    </tr>
    <% @rs.each do |row| %>
    <tr>
      <td><%= row['id'] %></td>
      <td><%= row['name'] %></td>
      <td><%= row['price'] %></td>
      <td>
        <% if row['on_sale'] == "t" %>
        <i class="icon-heart"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
